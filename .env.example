# =======================================
# üåç DJANGO SETTINGS
# =======================================

# Environment selector (local | production)
DJANGO_ENV=local

# Django secret key (generate a unique one for real use)
SECRET_KEY=changeme-in-production

# Debug mode (True for local, False in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =======================================
# üß† DATABASE SETTINGS
# =======================================

# Local Postgres configuration (used when DATABASE_URL not set)
POSTGRES_DB=portfolio
POSTGRES_USER=appuser
POSTGRES_PASSWORD=supersecret
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Optional: Production-style URL (uncomment for staging or CI)
# DATABASE_URL=postgres://appuser:supersecret@db:5432/portfolio

# =======================================
# üß± DJANGO INTERNALS
# =======================================

# Timezone and language
LANGUAGE_CODE=en-gb
TIME_ZONE=Europe/London

# =======================================
# üì¶ CONTAINER / ADMIN SETTINGS
# =======================================

# Django admin URL prefix (you can rename in prod for security)
# ADMIN_URL=admin/

# =======================================
# üßπ STATIC & MEDIA
# =======================================

# Folder paths (usually left default)
STATIC_URL=/static/
MEDIA_URL=/media/

# =======================================
# ‚öôÔ∏è LOGGING & MISC
# =======================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG
